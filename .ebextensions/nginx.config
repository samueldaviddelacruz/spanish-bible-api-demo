files:
  "/etc/nginx/conf.d/myapp_proxy.conf":
    content: |
      location / {
        proxy_pass http://127.0.0.1:8080; # Replace with the actual address of your Node.js app
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        # Add CORS headers
        add_header 'Access-Control-Allow-Origin' '*';
        add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS, PUT, DELETE';
        add_header 'Access-Control-Allow-Headers' 'Authorization, X-Requested-With, Content-Type, Accept';
      }
